
@{
    ViewBag.Title = "Index";
}

<table class="table-striped">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Price</th>
        <th>Qty</th>
        <th>Desciption</th>
    </tr>
    @foreach (var p in Model)
    {
<tr>
    <td>@p.Id</td>
    <td>@p.Name</td>
    <td>@p.Price</td>
    <td>@p.Qty</td>
    <td>@p.Description</td>
    <td><a class="text-success" href="/Product/Edit/@p.Id">Edit</a></td>
    <td><a class="text-danger" href="/Product/Delete/@p.Id">Delete</a></td>
</tr>
    }
</table>
<span class="text-info">
    @TempData["msg"]
</span>

